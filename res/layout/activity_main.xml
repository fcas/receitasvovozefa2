<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pautaa"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    <ImageButton
        android:id="@+id/trocaImagem"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/bomb"
        android:contentDescription="Imagem" />

    <Button
        android:id="@+id/button_sair"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_logoff"
        android:layout_alignLeft="@+id/button_minhas_receitas"
        android:text="Sair" />

    <Button
        android:id="@+id/button_logoff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Logoff" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/trocaImagem"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@+id/trocaImagem"
        android:textSize="15dp"
        android:text="Nome" />

    <Button
        android:id="@+id/button_compartilhar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/trocaImagem"
        android:layout_centerVertical="true"
        android:text="Compartilhar" />

    <Button
        android:id="@+id/button_minhas_receitas"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_compartilhar"
        android:layout_below="@+id/button_compartilhar"
        android:text="Minhas Receitas" />

    <Button
        android:id="@+id/button_buscar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_compartilhar"
        android:layout_alignLeft="@+id/button_compartilhar"
        android:text="Buscar Receitas" />

</RelativeLayout>